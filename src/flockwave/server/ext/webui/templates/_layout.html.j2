<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{{ title }} &mdash; Skybrush Server</title>

        <base href="{{ url_for('.index') }}">
        <link href="static/css/bootstrap.custom.min.css" rel="stylesheet">
        <link href="static/css/custom.css" rel="stylesheet">

        {% block frontmatter %}{% endblock %}
    </head>
    <body>

        {% block navbar %}
        {% include "_navbar.html.j2" %}
        {% endblock %}

        <div class="container-fluid">
            <div class="row">
                <nav id="sidebar-menu" class="col-md-3 col-lg-2 d-none d-md-block bg-light sidebar collapse">
                    <div class="sidebar-sticky py-3 d-flex flex-column">
                        {% block sidebar %}
                        {% include "_sidebar.html.j2" %}
                        {% endblock %}
                    </div>
                </nav>

                <main class="col-md-9 ml-sm-auto col-lg-10 p-0" role="main">
                    {% include "_restart_banner.html.j2" %}
                    {% block body %}{% endblock %}
                </main>
            </div>
        </div>

        <!-- ########################################################## -->

        <script type="text/javascript" src="static/js/jquery-3.3.1.slim.min.js"></script>
        <script type="text/javascript" src="static/js/bootstrap.bundle.min.js"></script>
        <script type="text/javascript" src="static/js/feather-icons-4.28.0.min.js"></script>

        {% block backmatter %}{% endblock %}

        <script type="text/javascript" src="static/js/main.js"></script>
    </body>
</html>
